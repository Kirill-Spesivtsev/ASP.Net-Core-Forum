@model ForumProject.ViewModels.PostModels.PostIndexModel

<div class="container body-content">

    <div class="row bodyBlock" id="postIndexContent">
        <div class="col-md-3 postAuthorContainer">
            <div class="postAuthorImage" style="background-image: url(@Model.AuthorImageUrl);"></div>
            <center>
                <a asp-controller="Profile" asp-action="Detail" asp-route-id="@Model.AuthorId">
                    @Model.AuthorName
                </a>
            </center>
            <center>
                <span class="postDate">
                    @Model.Created
                </span>
                (<span class="postAuthorRating">@Model.AuthorRating</span>)
            </center>
            @if (Model.IsAuthorAdmin)
            {
                <span class="isAdmin smaller">Admin</span>
            }
        </div>
        <div class="col-md-8 postContentContainer">
            <div class="postContent">
                @Html.Raw(Model.PostContent)
            </div>

        </div>
        <div class="col-md-1 postManageSection">
            <div class="postManageBar">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin") || User.Identity.Name == Model.AuthorName)
                    {
                        <a asp-controller="Post" asp-action="Edit" asp-route-PostId="@Model.Id" class="transparentButton postManageButton">
                            <i class="material-icons">edit</i>
                        </a>

                        <form asp-controller="Post" asp-action="ConfirmDelete" asp-route-id="@Model.Id">
                            <button class="transparentButton postManageButton" style="padding: 0px" type="submit" onclick="return confirm('Are you sure you want to delete this post')">
                                <i class="material-icons">delete</i>
                            </button>
                        </form>
                    }
                }
            </div>
        </div>

    </div>
    <div class="row" id="replyDivider"></div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="row">
            <span>
                <a asp-controller="Reply" asp-action="Create" asp-route-PostId="@Model.Id" class="btn btn-newReply" style="margin-top: 20px;">
                    Post Reply
                </a>
            </span>
        </div>
    }

    @if (Model.Replies.Any())
    {
        foreach (var reply in Model.Replies)
        {
            <div class="row replyContent">
                <div class="col-md-3 replyAuthorContainer">
                    <div class="postAuthorImage" style="background-image: url(@reply.AuthorImageUrl); background-size: 100%;"></div>
                    <center>
                        <a asp-controller="Profile" asp-action="Detail" asp-route-id="@reply.AuthorId">
                            @reply.AuthorName
                        </a>
                        (<span class="postAuthorRating">@reply.AuthorRating</span>)
                    </center>
                    @if (@reply.IsAuthorAdmin)
                    {
                        <div class="isAdmin profileLabel smaller">Admin</div>
                        <br />
                    }
                    <center>
                        <span class="postDate">
                            @reply.Created
                        </span>
                    </center>
                </div>
                <div class="col-md-8 replyContentContainer">
                    <div class="postContent">
                        @Html.Raw(@reply.ReplyContent)
                    </div>
                </div>
                <div class="col-md-1 postManageSection">
                    <div class="postManageBar">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin") || User.Identity.Name == reply.AuthorName)
                            {
                                <a asp-controller="Reply" asp-action="Edit" asp-route-ReplyId="@reply.Id" class="transparentButton postManageButton">
                                    <i class="material-icons">edit</i>
                                </a>

                                <form asp-controller="Reply" asp-action="ConfirmDelete" asp-route-id="@reply.Id">
                                    <button class="transparentButton postManageButton" type="submit" style="float:right;" onclick="return confirm('Are you sure you want to delete this reply')">
                                        <i class="material-icons">delete</i>
                                    </button>
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="noPosts">
            <h3>
                There are no replies to this post <br />
            </h3>
        </div>
    }

</div>