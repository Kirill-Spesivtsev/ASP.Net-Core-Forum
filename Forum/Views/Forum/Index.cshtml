@model ForumProject.Models.ForumModels.ForumIndexModel

<div id="formBackgroundContainer">
    <h1>Forums</h1>

    <table class="table table-hover" id="forumIndextable">
        <tbody>
            @foreach (var forum in Model.ForumList)
            {
                <tr>
                    <td>
                        <a asp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id" />
                        @forum.Name
                    </td>
                    <td>
                        @forum.Description
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>