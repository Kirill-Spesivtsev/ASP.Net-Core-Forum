@model ForumProject.Models.ForumModels.ForumTopicModel

                  
<h1>
    @Model.Forum.Name Forum
</h1>

<span id="headingBtn">
    <a asp-controller="Post" asp-action="Create" asp-route-forumId="@Model.Forum.Id" class="btn btn-newPost">
        Create Post
    </a>
</span>

@if (Model.Posts.Any()) 
{
    <table class="table table-bordered">
        <tbody>
            @foreach (var post in Model.Posts) 
            {
            <tr>
                <td>
                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                        @post.Title
                    </a>
                </td>
                <td>
                    @post.AuthorName
                </td>
                <td>
                    @post.DatePosted
                </td>
                <td>
                    @post.RepliesCount
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else 
{
    <div class="no_posts">
        <h4>
            No posts
            <br>
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
                <span>
                    Create?
                </span>
            </a>
        </h4>
    </div>
}